<UserControl x:Class="ThanksCardClient.Views.Logon"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:prism="http://prismlibrary.com/"
      prism:ViewModelLocator.AutoWireViewModel="True" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ThanksCardClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="850">
    <Grid>
        <StackPanel>
            <StackPanel.Background>
                <ImageBrush ImageSource="/Views/2.png"/>
            </StackPanel.Background>
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red"/>
            <TextBlock Text="Name:"/>
            <TextBox Text="{Binding User.Name}"/>
            <TextBlock Text="Password:"/>
            <TextBox Text="{Binding User.Password}"/>
            <Button Content="Logon" Command="{Binding LogonCommand}" Margin="0,0,-2,32"/>
        </StackPanel>
    </Grid>
</UserControl>
