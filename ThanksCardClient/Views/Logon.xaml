<UserControl x:Class="ThanksCardClient.Views.Logon"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:prism="http://prismlibrary.com/"
      prism:ViewModelLocator.AutoWireViewModel="True" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ThanksCardClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Rectangle HorizontalAlignment="Center" Height="449" Stroke="Black" VerticalAlignment="Center" Width="800">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Views/1.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBox HorizontalAlignment="Center" Height="35" Margin="0,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" TextAlignment="Left" VerticalContentAlignment="Center" Foreground="#FFB1AEAE"/>
        <TextBox HorizontalAlignment="Center" Height="32" Margin="0,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220"/>
        <Button Content="log in" Command="{Binding LogonCommand}" HorizontalAlignment="Center" Height="28" Margin="0,263,0,0" VerticalAlignment="Top" Width="135"/>
    </Grid>
</UserControl>
