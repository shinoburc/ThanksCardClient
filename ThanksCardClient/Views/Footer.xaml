<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="ThanksCardClient.Views.Footer"             
             prism:ViewModelLocator.AutoWireViewModel="True" d:DesignHeight="118">
    <Grid Margin="0,-66,0,0">
        <StackPanel>
            <Button Content="感謝カードを作成する" Command="{Binding ShowThanksCardCreateCommand}"/>
            <Button Content="掲示板" Command="{Binding ShowThanksCardListCommand}"/>
            <Button Content="受信BOX" Command="{Binding To2CommandCommand}"/>
            <Button Content="送信BOX" Command="{Binding From2Command}"/>
            <Button Content="社員登録" Command="{Binding ShowUserMstCommand}" IsEnabled="{Binding AuthorizedUser.IsAdmin}"/>
            <Button Content="部署/課の登録・更新" Command="{Binding ShowDepartmentMstCommand}" IsEnabled="{Binding AuthorizedUser.IsAdmin}"/>
            <Button Content="資料作成" Command="{Binding DocumentCommand}"/>
            <Button Content="タグのマスタメンテ画面を開く" Command="{Binding ShowTagMstCommand}" IsEnabled="{Binding AuthorizedUser.IsAdmin}"/>
            <Button Content="ログオフ" Command="{Binding LogoffCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
