             xmlns:local="clr-namespace:ThanksCardClient.Views"
             mc:Ignorable="d" Width="1366" Height="710">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Views/感謝カード作成画面 .png"/>
        </Grid.Background>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="235,49,0,0" TextWrapping="Wrap" Text="外国人対応の件" VerticalAlignment="Top" Width="550" FontSize="24" Opacity="0.8"/>
        <ListBox HorizontalAlignment="Left" Height="40" Margin="235,98,0,0" VerticalAlignment="Top" Width="470" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="24" Opacity="0.8"/>
        <ListBox HorizontalAlignment="Left" Height="40" Margin="235,147,0,0" VerticalAlignment="Top" Width="470" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="24" Opacity="0.8"/>
        <ListBox HorizontalAlignment="Left" Height="40" Margin="818,147,0,0" VerticalAlignment="Top" Width="470" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="24" Opacity="0.8"/>
        <TextBox HorizontalAlignment="Left" Height="300" Margin="235,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="1080" FontSize="24" Opacity="0.8"/>
        <TextBlock HorizontalAlignment="Left" Height="40" Margin="235,510,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="470" Background="White" FontSize="24" Opacity="0.8"/>
        <TextBlock HorizontalAlignment="Left" Height="40" Margin="235,560,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="470" Background="White" FontSize="24" Opacity="0.8"/>
        <DatePicker HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="470" Margin="235,605,0,0" FontSize="24" Opacity="0.9"/>
        <Button Content="" HorizontalAlignment="Left" Height="50" Margin="895,602,0,0" VerticalAlignment="Top" Width="150" Opacity="0"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="50" Margin="1096,602,0,0" VerticalAlignment="Top" Width="150" Opacity="0"/>
        <Button Content="Button" HorizontalAlignment="Center" Height="50" Margin="0,650,0,0" VerticalAlignment="Top" Width="150" Opacity="0"/>
    </Grid>
</UserControl>
