<UserControl x:Class="ThanksCardClient.Views.SendBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThanksCardClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1366">
    <UserControl.Background>
        <ImageBrush ImageSource="/Views/送信BOX画面.png"/>
    </UserControl.Background>
    <Button Command="{Binding HomeCommand}" HorizontalAlignment="Left" Height="52" Margin="643,643,0,0" VerticalAlignment="Top" Width="152" Opacity="0">
        <Button.Background>
            <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
        </Button.Background>
    </Button>
</UserControl>
