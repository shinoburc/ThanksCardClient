<UserControl x:Class="ThanksCardClient.Views.DepartmentEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:prism="http://prismlibrary.com/"
      prism:ViewModelLocator.AutoWireViewModel="True" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ThanksCardClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="450" Width="800">
        <StackPanel Height="450" VerticalAlignment="Top">
            <Button Content="戻る" HorizontalAlignment="Left" Height="73" Width="92" FontSize="36" Command="{Binding ShowFooterCommand}" Margin="0,1,0,25" />
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red"/>
            <TextBlock Text="Code:" FontSize="24"/>
            <TextBox Text="{Binding Department.Code}" Height="29"/>
            <TextBlock Text="Name:" FontSize="24"/>
            <TextBox Text="{Binding Department.Name}" Height="31"/>
            <TextBlock Text="Parent:" FontSize="24"/>
            <ComboBox SelectedItem="{Binding Department.Id}" ItemsSource="{Binding Departments}" DisplayMemberPath="Name" SelectedValue="{Binding Department.ParentId}" SelectedValuePath="Id" Height="37" Width="801"/>

            <Button Content="課所登録" Command="{Binding SubmitCommand}" Width="216" Height="84" Margin="0,72,0,7" FontSize="24"/>
        </StackPanel>
    </Grid>
</UserControl>
