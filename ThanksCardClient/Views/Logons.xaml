                <ImageBrush ImageSource="/Views/パスワードテキスト.png"/>
            </TextBox.Background>
        </TextBox>
        <TextBox HorizontalAlignment="Center" Height="50" Margin="0,206,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="450" FontSize="36" Padding="60,-4,0,0">
