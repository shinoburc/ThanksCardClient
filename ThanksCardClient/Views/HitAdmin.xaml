<UserControl x:Class="ThanksCardClient.Views.HitAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThanksCardClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid HorizontalAlignment="Center" Height="450" VerticalAlignment="Center" Width="800">
            <Grid.OpacityMask>
                <ImageBrush Stretch="Uniform" ImageSource="/Views/HitAdmin.png"/>
            </Grid.OpacityMask>
        </Grid>
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/Views/HitAdmin.png" Stretch="Uniform"/>
            </Grid.Background>
            <Button Content="戻る" Command="{Binding BackAdminCommand}" HorizontalAlignment="Left" Height="28" Margin="650,125,0,0" VerticalAlignment="Top" Width="79" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Cursor="Hand" Opacity="0"/>
            <Button Content="メニュー" Command="{Binding MenuAdminCommand}" HorizontalAlignment="Left" Height="38" Margin="21,42,0,0" VerticalAlignment="Top" Width="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Cursor="Hand"/>
        </Grid>

    </Grid>
</UserControl>
